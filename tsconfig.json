{
	"compilerOptions": {
		"assumeChangesOnlyAffectDirectDependencies": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"target": "ESNext"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"**/node_modules",
		"**/.*/"
	]
}
